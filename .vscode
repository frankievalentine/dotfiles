{
    // THEME
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "ZEIT",
    // FONT
    "editor.fontFamily": "'JetBrains Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    // PRETTIER
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // EMMET
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "typescriptreact",
        "vue-html": "html",
        "markdown": "html",
        "svelte": "html"
    },
    "emmet.triggerExpansionOnTab": true,
    // "emmet.showExpandedAbbreviation": "never",
    // PEACOCK
    "peacock.favoriteColors": [
        {
            "name": "Angular Red",
            "value": "#b52e31"
        },
        {
            "name": "Auth0 Orange",
            "value": "#eb5424"
        },
        {
            "name": "Azure Blue",
            "value": "#007fff"
        },
        {
            "name": "C# Purple",
            "value": "#68217A"
        },
        {
            "name": "Gatsby Purple",
            "value": "#639"
        },
        {
            "name": "Go Cyan",
            "value": "#5dc9e2"
        },
        {
            "name": "Java Blue-Gray",
            "value": "#557c9b"
        },
        {
            "name": "JavaScript Yellow",
            "value": "#f9e64f"
        },
        {
            "name": "Mandalorian Blue",
            "value": "#1857a4"
        },
        {
            "name": "Node Green",
            "value": "#215732"
        },
        {
            "name": "React Blue",
            "value": "#00b3e6"
        },
        {
            "name": "Something Different",
            "value": "#832561"
        },
        {
            "name": "Vue Green",
            "value": "#42b883"
        }
    ],
    // INDENT RAINBOW
    "indentRainbow.colors": [
        "rgba(16,16,16,0.1)",
        "rgba(16,16,16,0.2)",
        "rgba(16,16,16,0.3)",
        "rgba(16,16,16,0.4)",
        "rgba(16,16,16,0.5)",
        "rgba(16,16,16,0.6)",
        "rgba(16,16,16,0.7)",
        "rgba(16,16,16,0.8)",
        "rgba(16,16,16,0.9)",
        "rgba(16,16,16,1.0)"
    ],
    // EMOJISENSE
    "emojisense.languages": {
        "markdown": true,
        "javascript": true,
        "html": true,
        "css": true,
        "svelte": true,
        "plaintext": {
            "markupCompletionsEnabled": false,
            "emojiDecoratorsEnabled": false
        },
        "git-commit": true
    },
    // AUTO CLOSE TAG
    "auto-close-tag.activationOnLanguage": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "plaintext",
        "markdown",
        "vue",
        "svelte"
    ],
    // MISC
    "liveServer.settings.donotShowInfoMsg": true,
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderIndentGuides": false,
    "editor.wordWrap": "on",
    "git.autofetch": true,
    "window.zoomLevel": -0.5,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 300000,
    "html.format.wrapLineLength": 0,
}

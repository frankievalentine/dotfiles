Include ~/.orbstack/ssh/config

Host *
	# Symlinked to IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock" using 1Password SSH Agent setup docs
	# https://developer.1password.com/docs/ssh/get-started
	IdentityAgent ~/.1password/agent.sock

	# Set TERM to xterm-256color for better color support for Ghostty
	SetEnv TERM=xterm-256color
